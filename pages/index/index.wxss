/**index.wxss**/
@import "../ToolTip/toolTip.wxss";
.container {
  padding: 0;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 50rpx;
  margin-top: 50px;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
  margin-bottom: 50px;
}

button {
  font-size: 32rpx;
  padding: 0 30px;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  width: 80%;
}